{
  "buildCommand": "cd client && npm ci && npm run build:prod",
  "outputDirectory": "client/dist",
  "installCommand": "cd client && npm ci",
  "devCommand": "cd client && npm run dev",
  "framework": "vite",
  "env": {
    "VITE_API_URL": "https://web-production-e7159.up.railway.app"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://web-production-e7159.up.railway.app/api/$1"
    },
    {
      "source": "/health",
      "destination": "https://web-production-e7159.up.railway.app/health"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 